{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": ["node", "vitest/globals", "react"]
    },
    "include": [
      "src/**/*",
      "src/tests/**/*" // Make sure to include your test files
    ]
  }